<div class="signup-container">
    <div class="signup-header">
        <h2 class="signup-title">Sign up below!</h2>
      </div>
    </div>

    <div class="form-div-2">
        <form class="login-form">
          <div class="mb-3 first">
            <label for="name-signup" class="form-label">First Name</label> 
            <input type="text" class="form-first" id="first-name"/>
          <div class="mb-3 last">
            <label for="name-signup" class="form-label">Last Name</label>
            <input type="text" class="form-last" id="last-name"/>
          </div>
          <div class="mb-3 email">
            <label for="email-signup" class="form-label">Email address</label>
            <input type="email" class="form-email" id="email"/>
          </div>
          <div class="mb-3 password">
            <label for="password-signup" class="form-label">Password</label>
            <input type="password" class="form-password" id="password"/>
          </div>
          <div class="btn-container">
          <button type="submit" class="signup-btn">Sign up!</button>
        </div>
        </form>
</div>